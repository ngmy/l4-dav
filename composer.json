{
    "name": "ngmy/l4-dav",
    "type": "library",
    "description": "A simple WebDAV client library for Laravel",
    "keywords": [
        "webdav",
        "client",
        "webdav client",
        "stream",
        "curl",
        "psr-7",
        "psr-17",
        "psr-18"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yuta Nagamiya",
            "email": "y.nagamiya@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-dom": "*",
        "lib-libxml": "*",
        "guzzlehttp/psr7": "^1.7.0",
        "http-interop/http-factory-guzzle": "^1.0.0",
        "league/uri-components": "^2.3.0",
        "ngmy/enum": "^0.1.0",
        "php-http/curl-client": "^1.7.1",
        "symfony/http-foundation": "^5.2.2"
    },
    "require-dev": {
        "mikey179/vfsstream": "1.6.8",
        "mockery/mockery": "1.4.2",
        "phpstan/phpstan-mockery": "0.12.11"
    },
    "autoload": {
        "psr-4": {
            "Ngmy\\PhpWebDav\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ngmy\\PhpWebDav\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "@php tools/phpunit --colors=always"
        ],
        "lint": [
            "@php tools/phpcs"
        ],
        "findbugs": [
            "@php tools/phpstan analyse --ansi"
        ],
        "fmt": [
            "@php tools/phpcbf | exit 0",
            "@php tools/php-cs-fixer fix --ansi"
        ],
        "docs": [
            "@php tools/phpDocumentor --force"
        ]
    }
}
